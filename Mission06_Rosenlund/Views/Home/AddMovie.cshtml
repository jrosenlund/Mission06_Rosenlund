@{
    ViewData["Title"] = "Add a Movie";
}

@model Movie

<div class="text-center">
    <h2 class="display-4">Got a movie to add?</h2>
    <p><h4>Use this form to insert a movie into the JHFC.</h4></p>
    <br />
    <fieldset style="text-align: left; border: solid 1px black; padding: 20px; width: 350px; margin: 0 auto">
        <form method="post">
            <label asp-for="Title">Title:</label>
            <input type="text" asp-for="Title" /><br />
            <label asp-for="Year">Year:</label>
            <input type="text" asp-for="Year"/><br />
            <label asp-for="Category">Category:</label>
            <input type="text" asp-for="Category" /><br />
            <label asp-for="Director">Director:</label>
            <input type="text" asp-for="Director" /><br />
            <label asp-for="Rating">Rating:</label>
            <select asp-for="Rating">
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select><br />
            <label asp-for="Edited">Edited:</label>
            <input type="checkbox" asp-for="Edited" /><br />
            <label asp-for="LentTo">Lent To:</label>
            <input type="text" asp-for="LentTo" /><br />
            <label asp-for="Notes">Notes:</label>
            <input type="text" asp-for="Notes" maxlength="25"/><br />
            <button type="submit">Submit</button>
        </form>
    </fieldset>
</div>
